<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        style="@style/setguid_title_txt"
        android:text="3.设置安全号码"
        android:textSize="28sp" />

    <ImageView
        style="@style/setguid_divide_line"
        android:layout_marginTop="5dip" />

    <TextView
        style="@style/setguid_title_txt"
        android:layout_marginTop="10dip"
        android:singleLine="false"
        android:text="@string/setup_guilde3_rem"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:padding="5dip" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:id="@+id/et_setguide3_contact"
            android:hint="请选择联系人..." 
            android:inputType="text"
            />

        <Button
            android:id="@+id/btn_select_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="4"
            android:background="@drawable/button_selector"
            android:text="选择" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView style="@style/setguid_progress_img" />

        <ImageView style="@style/setguid_progress_img" />

        <ImageView style="@style/setguid_current_progress_img" />

        <ImageView style="@style/setguid_progress_img" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical|center_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_private_space_icon_pressed" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_guide3_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dip"
            android:background="@drawable/button_selector"
            android:drawableLeft="@drawable/previous"
            android:gravity="center_vertical|center_horizontal"
            android:text="上一步"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_guide3_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dip"
            android:background="@drawable/button_selector"
            android:drawableRight="@drawable/next"
            android:gravity="center_vertical|center_horizontal"
            android:text="下一步"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
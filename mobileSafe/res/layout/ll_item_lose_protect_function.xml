<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:background="@color/background"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    android:padding="20dip"
    >
    <ImageView 
        android:id="@+id/iv_lose_pro_fun"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dip"
        android:src="@drawable/kn_protection_huanka"
        android:layout_marginBottom="10dip"
        />
    
    <TextView 
        android:id="@+id/tv_lose_pro_fun_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/iv_lose_pro_fun"
        android:textColor="@color/txt_white"
        android:text="@string/lose_pro_sendSms"
        android:textSize="22sp"
        android:layout_alignBottom="@id/iv_lose_pro_fun"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jiantou1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:layout_alignBottom="@id/tv_lose_pro_fun_name"
        android:paddingBottom="2dip"
        />

</RelativeLayout>

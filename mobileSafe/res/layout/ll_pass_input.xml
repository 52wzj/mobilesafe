<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_passInput_dialog"
    android:layout_width="290dip"
    android:layout_height="215dip"
    android:background="@drawable/dialog_passinput_background"
    android:orientation="vertical"
    android:padding="1dip"
    android:gravity="center_horizontal"
     >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:textSize="24sp" 
        android:text="输入密码"
      
        />
<LinearLayout 
    android:layout_width="288dip"
    android:layout_height="120dip"
    android:orientation="vertical"
    android:background="#ffc0c0c0"
    android:gravity="center_vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_pass_txt"
        android:textSize="15sp" 
        android:textColor="#ff000000"
        />

    <EditText
        android:id="@+id/etxt_pass_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="290dip"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        
        
        >
        <Button 
            android:id="@+id/btn_pass_pos"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
          android:layout_weight="1"
            android:text="确定"
            android:background="@drawable/button_selector"
        
            />
         <Button 
            android:id="@+id/btn_pass_concel"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:text="取消"
           android:background="@drawable/button_selector"
           android:layout_marginLeft="5dip" />
    </LinearLayout>

</LinearLayout>